#include<stdio.h>
#include<conio.h>
int main()
{
int  a[10][10],b[10][10],c[10][10],r1,c1,r2,c2,i,j;
clrscr();

printf("enter the row & column of first array\n");
scanf("%d %d",&r1,&c1);
printf("\nenter the row &column of second array\n");
scanf("%d %d",&r2,&c2);

if(r1==r2 && c1==c2)
{
 printf("enter first array\n");
 for(i=0;i<r1;i++)
 {
 for(j=0;j<c1;j++)
 {
 scanf("%d",&a[i][j]);
 }
 }
 printf("\nenter second array\n");
 for(i=0;i<r2;i++)
 {
 for(j=0;j<c2;j++)
 {
 scanf("%d",&b[i][j]);
 }
 }

 printf("\nsum of two arrays is \n");
 for(i=0;i<r1;i++)
 {
 for(j=0;j<c1;j++)
 {
 c[i][j]=a[i][j]+b[i][j];
 }
 }
 for(i=0;i<r1;i++)
 {
 for(j=0;j<c1;j++)
 {
  printf("%d\t",c[i][j]);
 }
 printf("\n");
 }
 }
 else
 {
 printf("arrays cannot be added\n");
 }

 getch();
 return 0;
 }
